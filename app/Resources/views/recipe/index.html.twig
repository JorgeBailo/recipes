{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_show', { 'slug': recipe.slug }) }}">{{ recipe.id }}</a></td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.created }}</td>
                <td>{{ recipe.updated }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recipe_show', { 'slug': recipe.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_new') }}">Create a new recipe</a>
        </li>
    </ul>
{% endblock %}
